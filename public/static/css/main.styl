#footer
  color #fff
  background-color #363f48
  height 60px

#footer a
  color #fff
  font-weight normal

#footer li
  display inline-block
  list-style-type none

#footer ul.navigation
  left 15px
  position absolute

#footer ul.social
  right 15px
  position absolute

#footer ul.social li
  padding-left 10px
  padding-right 10px

#footer ul.navigation li + li::before
  content " / "
  padding 10px

#footer ul.navigation li + li:before
  content " / "
  padding 10px

#footer ul.navigation li + li
  margin-left 5px
  margin-right 5px

#code
  margin 0
  width 900px
  height 300px
  margin-left auto
  margin-right auto
  border 2px solid #f6f6f6


#whitelist, #blacklist
  list-style none
  margin-left 0
  padding-left 0

#whitelist li, #blacklist li
  display inline-block
  list-style-type none
  padding-top 8px
  padding-bottom 8px
  border-bottom 2px solid #f6f6f6
  display block

#whitelist li i, #blacklist li i
  margin-right 10px

#whitelist li span.good, #blacklist li span.good
#whitelist li span.bad, #blacklist li span.bad
  font-style: italic
  font-weight bold

#whitelist li span.good
  color #9bc5cf

#blacklist li span.bad
  color #cf5c5c

#whitelist li span.bad, #blacklist li span.good
  color #a3a096

p.exercise-description
